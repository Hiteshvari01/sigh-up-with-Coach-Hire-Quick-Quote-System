<!-- Google Material Icons -->
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="container-fluid px-4 py-5 bg-gray-100 min-vh-100">
  <!-- Page Header -->
  <div class="d-flex justify-content-between align-items-center mb-5">
    <h2 id="sidebar-name" class="fw-bold">Settings</h2>
    <small class="text-muted">Manage your profile & password</small>
  </div>

  <div class="row g-4">
    <!-- Profile Card -->
    <div class="col-lg-6">
      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Profile Details</h5>
          <button class="btn btn-outline-primary btn-sm" onclick="toggleEdit('profile')">
            <i class="material-icons fs-5">edit</i> Edit
          </button>
        </div>
        <div class="card-body">
          <form id="profileForm" method="POST" action="/update-profile">
            <input type="hidden" name="adminId" value="<%= admin._id %>">

            <div class="mb-3">
              <label class="form-label text-muted">Name</label>
              <p id="profileNameText" class="fw-semibold fs-6"><%= admin.username %></p>
              <input type="text" class="form-control d-none" id="profileNameInput" name="username" value="<%= admin.username %>">
            </div>

            <div class="mb-3">
              <label class="form-label text-muted">Email</label>
              <p id="profileEmailText" class="fw-semibold fs-6"><%= admin.email %></p>
              <input type="email" class="form-control d-none" id="profileEmailInput" name="email" value="<%= admin.email %>">
            </div>

            <div class="d-none" id="profileActions">
              <button type="submit" class="btn btn-primary rounded-pill me-2">Save</button>
              <button type="button" class="btn btn-outline-secondary rounded-pill" onclick="cancelEdit('profile')">Cancel</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Password Card -->
    <div class="col-lg-6">
      <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-white">
          <h5 class="mb-0">Change Password</h5>
        </div>
        <div class="card-body">
          <form id="passwordForm" method="POST" action="/update-password">
            <input type="hidden" name="email" value="<%= admin.email %>">

            <div class="mb-3">
              <label class="form-label text-muted">Current Password</label>
              <input type="password" class="form-control" name="currentPassword" placeholder="Enter current password" required>
            </div>

            <div class="mb-3">
              <label class="form-label text-muted">New Password</label>
              <input type="password" class="form-control" name="pass" placeholder="Enter new password" minlength="6" required>
            </div>

            <div class="mb-3">
              <label class="form-label text-muted">Confirm New Password</label>
              <input type="password" class="form-control" name="conpass" placeholder="Confirm new password" minlength="6" required>
            </div>

            <button type="submit" class="btn btn-primary rounded-pill">Save Password</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- JS: Edit/Cancel Toggle -->
<script>
function toggleEdit(section) {
  if(section === 'profile') {
    document.getElementById('profileNameText').classList.add('d-none');
    document.getElementById('profileEmailText').classList.add('d-none');
    document.getElementById('profileNameInput').classList.remove('d-none');
    document.getElementById('profileEmailInput').classList.remove('d-none');
    document.getElementById('profileActions').classList.remove('d-none');
  }
}

function cancelEdit(section) {
  if(section === 'profile') {
    document.getElementById('profileNameText').classList.remove('d-none');
    document.getElementById('profileEmailText').classList.remove('d-none');
    document.getElementById('profileNameInput').classList.add('d-none');
    document.getElementById('profileEmailInput').classList.add('d-none');
    document.getElementById('profileActions').classList.add('d-none');
  }
}
</script>
