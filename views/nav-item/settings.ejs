  <div class="container w-100 " >
   

    <!-- Profile Details -->
    <div class="card mb-4">
      <div class="card-header">
        <h5>Profile Details</h5>
      </div>
      <div class="card-body">
        <p><strong>Name:</strong> Damien Long</p>
        <p><strong>Email:</strong> damien.long@example.com</p>
        <p><strong>Role:</strong> Owner</p>
      </div>
    </div>

    <!-- Change Password -->
    <div class="card">
      <div class="card-header">
        <h5>Change Password</h5>
      </div>
      <div class="card-body">
        <form id="passwordForm" novalidate>
          <div class="mb-3">
            <label for="currentPassword" class="form-label">Current Password</label>
            <input
              type="password"
              class="form-control"
              id="currentPassword"
              required
              placeholder="Enter current password"
            />
            <div class="invalid-feedback">Please enter your current password.</div>
          </div>

          <div class="mb-3">
            <label for="newPassword" class="form-label">New Password</label>
            <input
              type="password"
              class="form-control"
              id="newPassword"
              required
              placeholder="Enter new password"
              minlength="6"
            />
            <div class="invalid-feedback">
              New password must be at least 6 characters.
            </div>
          </div>

          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm New Password</label>
            <input
              type="password"
              class="form-control"
              id="confirmPassword"
              required
              placeholder="Confirm new password"
            />
            <div class="invalid-feedback" id="confirmPasswordFeedback">
              Passwords do not match.
            </div>
          </div>

          <button
            type="submit"
            class="btn btn-primary rounded-pill"
          >
            Save Password
          </button>
        </form>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('passwordForm');
    const newPassword = document.getElementById('newPassword');
    const confirmPassword = document.getElementById('confirmPassword');

    function validatePasswords() {
      // Check new password length
      if (newPassword.value.length < 6) {
        newPassword.classList.add('is-invalid');
      } else {
        newPassword.classList.remove('is-invalid');
      }

      // Check confirm password matches new password
      if (confirmPassword.value !== newPassword.value || confirmPassword.value === '') {
        confirmPassword.classList.add('is-invalid');
      } else {
        confirmPassword.classList.remove('is-invalid');
      }
    }

    newPassword.addEventListener('input', () => {
      validatePasswords();
    });

    confirmPassword.addEventListener('input', () => {
      validatePasswords();
    });

    form.addEventListener('submit', (e) => {
      e.preventDefault();

      // Trigger validation for current password
      if (!form.currentPassword.value) {
        form.currentPassword.classList.add('is-invalid');
      } else {
        form.currentPassword.classList.remove('is-invalid');
      }

      validatePasswords();

      // Check all validations
      if (
        form.currentPassword.value &&
        newPassword.value.length >= 6 &&
        confirmPassword.value === newPassword.value
      ) {
        alert('Password changed successfully!');
        form.reset();
      }
    });
  </script>

  
  </div>
