<div class="container-fluid px-3 px-md-4 py-4" style="background-color: #f1f3f6; min-height: 100vh;">
  <!-- Top Heading -->
  <div class="d-flex align-items-center justify-content-between flex-wrap mb-4">
    <h6 id="sidebar-name" class="fw-semibold mb-0 text-truncate flex-grow-1" style="min-width: 0; font-size: 1.15rem;">
      Email Templates
    </h6>
  </div>

  <!-- Search -->
  <div class="d-flex align-items-center -mt-3 mb-4 gap-2 flex-wrap flex-sm-nowrap">
    <div class="relative min-w-[100px] w-auto">
      <span class="material-icons absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-[20px]">search</span>
      <input type="text" id="leadSearch" 
             class="border rounded shadow-sm pl-10 pr-2 py-1 w-full focus:outline-none focus:ring-1 focus:ring-blue-500" 
             placeholder="Search templates">
    </div>
  </div>

  <!-- Templates List -->
  <div class="bg-white rounded shadow-sm overflow-hidden ps-2">
    <div class="bg-white rounded shadow-sm overflow-hidden" id="templateList">
      <% templates.forEach(t => { %>
        <div class="row py-3 px-2 border-bottom lead-card" 
             data-id="<%= t._id %>" 
             data-type="<%= t.type %>" 
             data-subject="<%= t.subject %>" 
             data-body="<%= t.body %>">
          <div class="col-12 d-flex justify-content-between align-items-center fs-6">
            <div class="fw-semibold">Quotation <%= t.type %> Email</div>
            <span class="material-icons text-primary">chevron_right</span>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<script>
  const searchInput = document.getElementById('leadSearch');
  const templateRows = document.querySelectorAll('#templateList .lead-card');

  searchInput.addEventListener('input', () => {
    const query = searchInput.value.toLowerCase().trim();
    templateRows.forEach(row => {
      const text = row.querySelector('.fw-semibold').textContent.toLowerCase();
      row.style.display = text.includes(query) ? 'flex' : 'none';
    });
  });
</script>
