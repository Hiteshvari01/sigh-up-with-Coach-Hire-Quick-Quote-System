<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Lead Card</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

   
</head>

<body>
    <div id="toastBox" class="fixed bottom-5 right-5 z-50 space-y-2"></div>
    <div id="leadCardContainer" class="p-4"></div>
    
    <div id="confirmModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
        <div class="bg-white rounded-lg p-6 w-80 text-center">
            <p class="mb-4 font-medium">Are you sure you want to delete this lead?</p>
            <div class="flex justify-around gap-4">
                <button id="cancelDelete" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Cancel</button>
                <button id="confirmDelete" class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600">Delete</button>
            </div>
        </div>
    </div>

    <script>
   function updateLeadDetails(data) {
    // Calculate total amount based on priceEstimate and passengers
    const price = Number(data.priceEstimate) || 0;
    const passengers = Number(data.passengers) || 0;
    const totalAmount = price * passengers;

    // Add totalAmount to data so we can display
    data.totalAmount = totalAmount;

    const container = document.getElementById("leadCardContainer");
    container.innerHTML = `
       <div class="w-full bg-white rounded-[30px] shadow-xl p-6">
    <div class="flex items-center justify-between mb-4">
      <button id="closeDetail" class="bg-[#F0F2F4] rounded-[100px]  w-10 p-2 ">
        <i class="fas fa-times text-black text-sm"></i>
      </button>
      <div class="flex items-center gap-2 text-[#007BE5] font-medium text-base">
        <i class="fas fa-clipboard text-[#007BE5] text-lg"></i>
        <span>New Lead</span>
      </div>
      <span class="w-"></span>
    </div>

        <div class="space-y-6">
          <div class="flex justify-between">
            <div class="flex-1">
              <p class="text-sm font-medium uppercase text-gray-500">Amount</p>
              <p class="text-2xl font-bold text-gray-800">€${price}</p>
            </div>
            <div class="flex-1">
              <p class="text-sm font-medium uppercase text-gray-500">Split</p>
              <p class="text-2xl font-bold text-gray-800">${passengers}/${data.maxCapacity || 5}</p>
            </div>
            <div class="flex-1 text-right">
              <p class="text-sm font-medium uppercase text-gray-500">Total</p>
              <p class="text-2xl font-bold text-gray-800">€${totalAmount}</p>
            </div>
          </div>

          <div>
            <p class="text-sm font-medium uppercase text-gray-500">Date</p>
            <p class="text-lg text-gray-800">${data.departureDate || '-'} ${data.departureTime || ''}</p>
          </div>

          <div>
            <p class="text-sm font-medium uppercase text-gray-500">By</p>
            <a href="#" class="text-lg font-medium text-blue-600 hover:underline">${data.name || '-'}</a>
          </div>

          <div>
            <p class="text-sm font-medium uppercase text-gray-500">Lead</p>
            <div class="mt-2 flex items-center justify-between rounded-xl border border-gray-200 p-4">
              <div class="flex items-center space-x-2">
                <p class="text-lg font-medium text-gray-800">${data.pickup || '-'}</p>
                <i class="fas fa-arrow-right text-gray-400"></i>
                <p class="text-lg font-medium text-gray-800">${data.destination || '-'}</p>
                <p class="text-sm text-gray-500">${data.departureDate || '-'}</p>
              </div>
              <i class="fas fa-chevron-right text-gray-400"></i>
            </div>
          </div>
        </div>
      </div>
    `;

    document.getElementById('closeDetail').addEventListener('click', () => {
      // Redirect back
      window.location.href = '/2ndLink';
    });
  }
</script>

</body>
</html>