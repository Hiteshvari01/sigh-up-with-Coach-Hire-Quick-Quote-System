<link rel="stylesheet" href="/css/leads.css">

<!-- Main Content Wrapper -->
<div class="container-fluid px-3 px-md-4 py-4" style="background-color: #f1f3f6; min-height: 100vh;">

  <!-- Top: Greeting + Actions -->
  <div class="d-flex align-items-center gap-2 flex-grow-1 flex-shrink-1">
    <button class="btn d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas">
      <i class="bi bi-list fs-4"></i>
    </button>
  </div>

  <div class="d-flex align-items-center justify-content-between flex-wrap mb-4" style="width: 100%;">
    <h6 id="sidebar-name" class="fw-semibold mb-0 text-truncate flex-grow-1" style="min-width: 0; font-size: 1.15rem;">
      Welcome , <%= admin.username %>!
    </h6>
    <div class="d-flex align-items-center gap-2 flex-shrink-0">
      <!-- Optional buttons can go here -->
    </div>
  </div>

  <!-- Heading + Search -->
  <div class="d-flex flex-row justify-content-between align-items-center mb-4 flex-nowrap">
    <h6 class="fw-semibold text-muted mb-0 me-3">Pending leads</h6>
    <div style="width: 200px; min-width: 150px;">
      <div class="input-group shadow-sm rounded">
        <span class="input-group-text border-0 bg-transparent p-1 pe-2">
          <span class="material-icons text-muted" style="font-size: 20px;">search</span>
        </span>
        <input type="text" class="form-control border-0 bg-transparent shadow-none px-1" placeholder="Search leads">
      </div>
    </div>
  </div>

  <div class="d-flex flex-column gap-3">
    <% 
      const seenEmails = new Set();
      detailedTrips.forEach(({ trip, goingStops, returnStops, timing, user }) => {
        if (!user || !user.email) return;
        if (seenEmails.has(user.email)) return; // skip duplicate emails
        seenEmails.add(user.email);
    %>

      <div class="lead-card lead-row"
           data-trip-type="<%= trip.tripType || 'oneway' %>"
           data-id="<%= trip._id %>"
           data-submit-date="<%= String(new Date(trip.createdAt).getDate()).padStart(2,'0') %> <%= ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'][new Date(trip.createdAt).getMonth()] %> <%= new Date(trip.createdAt).getFullYear() %>"
           data-name="<%= user.fullName %>"
           data-email="<%= user.email %>"
           data-phone="<%= user.phoneNumber || '' %>"
           data-pickup="<%= trip.pickupLocation %>"
           data-status="<%= trip.status || 'Pending' %>"
           data-destination="<%= trip.destinationLocation %>"
           data-date="<%= timing ? timing.departureDate + ' ' + timing.departureTime : '' %>"
           data-departure-date="<%= timing?.departureDate %>"
           data-departure-time="<%= timing?.departureTime %>"
           data-return-date="<%= timing?.returnDate %>"
           data-return-time="<%= timing?.returnTime %>"
           data-passengers="<%= trip.numberOfPeople %>"
           data-price-estimate="â‚¬120"
           data-from-stops='<%= JSON.stringify(goingStops.map(stop => ({ location: stop.location, duration: stop.duration }))) %>'
           data-to-stops='<%= JSON.stringify(returnStops.map(stop => ({ location: stop.location, duration: stop.duration }))) %>'>
           
        <div class="flex flex-col sm:flex-row items-start sm:items-center flex-grow gap-3 sm:gap-2">
          <div class="font-semibold"><%= user.fullName %></div>
          <div class="text-gray-500 text-xs">
            <a href="javascript:void(0)" class="user-email"><%= user.email %></a> â€¢ Trips booked: <%= userTripCount[user.email] || 0 %>
          </div>
        </div>
        <div class="flex items-center text-gray-500 ml-3">
          <span class="material-icons">chevron_right</span>
        </div>
      </div>

    <% }); %>
  </div>
  
</div>

<script>
  // Search functionality
  const searchInput = document.querySelector('input[placeholder="Search leads"]');
  const allLeadCards = document.querySelectorAll('.lead-card'); 

  searchInput.addEventListener('input', () => {
    const query = searchInput.value.toLowerCase().trim();
    allLeadCards.forEach(card => {
      const name = card.dataset.name?.toLowerCase() || '';
      const pickup = card.dataset.pickup?.toLowerCase() || '';
      const destination = card.dataset.destination?.toLowerCase() || '';
      const email = card.dataset.email?.toLowerCase() || '';
      const phone = card.dataset.phone?.toLowerCase() || '';
      card.style.display = (name.includes(query) || pickup.includes(query) || destination.includes(query) || email.includes(query) || phone.includes(query)) ? 'flex' : 'none';
    });
  });

  // Filter buttons
  const filterButtons = document.querySelectorAll('.filter-btn');
  const otherLeadCards = document.querySelectorAll('#other-leads .lead-card');

  filterButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const status = btn.textContent.trim();
      filterButtons.forEach(b => { b.classList.remove('btn-primary'); b.classList.add('btn-outline-primary'); });
      btn.classList.remove('btn-outline-primary');
      btn.classList.add('btn-primary');

      const container = document.querySelector('#other-leads');
      otherLeadCards.forEach(card => {
        if (status === 'All' || card.dataset.status === status) {
          card.style.display = 'flex';
          container.prepend(card);
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>
