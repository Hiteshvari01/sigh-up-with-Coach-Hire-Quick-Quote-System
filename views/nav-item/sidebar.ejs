<script>
  document.addEventListener("DOMContentLoaded", function () {
    const template = document.getElementById("nav-items-template");
    const navHTML = template.innerHTML;

    // Inject nav items
    document.querySelector(".nav-list-mobile").innerHTML = navHTML;
    document.querySelector(".nav-list-desktop").innerHTML = navHTML;

    const allNavLinks = document.querySelectorAll(".nav-link");

    // Set active from localStorage
    const activeHref = localStorage.getItem("activeNav");
    if (activeHref) {
      allNavLinks.forEach(link => {
        if (link.getAttribute("href") === activeHref) {
          link.classList.add("active-nav");
        }
      });
    }

    // Update active on click
    allNavLinks.forEach(link => {
      link.addEventListener("click", function () {
        allNavLinks.forEach(l => l.classList.remove("active-nav"));
        this.classList.add("active-nav");
        localStorage.setItem("activeNav", this.getAttribute("href"));
      });
    });

    // Collapse logic will be triggered from dashboard when icon is clicked
  });

  
</script>
