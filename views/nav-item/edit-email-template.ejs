<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Lead Card</title>

  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

  <style>
    body { background-color: #f2f2f2; }
    @keyframes slide-in {
      from { transform: translateX(100%); opacity: 0; }
      to { transform: translateX(0); opacity: 1; }
    }
    .animate-slide-in { animation: slide-in 0.5s ease-out; }
  </style>
</head>

<body>
<div id="toastBox" class="fixed bottom-5 right-5 z-50 space-y-2"></div>

<div class="p-4">
  <div class="w-full bg-white rounded-[30px] shadow-xl p-6 animate-slide-in">
    <!-- header -->
    <div class="flex items-center justify-between mb-4">
      <button id="closeDetail" class="bg-[#F0F2F4] rounded-[100px]  w-10 p-2 ">
        <i class="fas fa-times text-black text-sm"></i>
      </button>
      <div class="flex items-center text-blue-500 cursor-pointer hover:text-blue-700">
        <i class="fa-solid fa-pen-to-square"></i>
        <span class="ml-1 text-l font-medium">Quotation Email</span>
      </div>
      <span class="w-"></span>
    </div>

    <!-- Email Form -->
    <form id="editTemplateForm" method="POST" action="/update-email-template"class="space-y-6" >
      <!-- Subject -->
        <input type="hidden" name="id" id="templateId" />
      <div>
        <label class=" form-label block text-sm font-medium text-gray-700">Subject</label>
        <input 
          type="text" 
          id="templateSubject" 
          name="subject" 
          class="form-control" 
         
          required
        />
      </div>

      <!-- Message Content -->
      <div>
        <label class=" form-label block text-sm font-medium text-gray-700">Message Content</label>
        <textarea 
          name="body" 
          id="templateBody"
          class="form-control" 
          rows="8"
          required
        ></textarea>
      </div>

      <!-- Template Variables Info -->
      <div class="text-xs text-gray-500 mt-6 pt-4 border-t border-gray-200">
        <h4 class="font-semibold mb-1">TEMPLATE VARIABLES</h4>
        Variables in curly braces will be replaced with actual values when the email is sent.<br>
        Examples: {quotation.id}, {quotation.user.first_name}, {lead.name}
      </div>

      <!-- Buttons -->
      <div class="mt-6 pt-4 border-t border-gray-200 flex justify-end space-x-4">
        <button 
          type="button"
          class="px-4 py-2 text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"
        >
          Cancel
        </button>
        <button 
          type="submit"
          class="px-4 py-2 text-white bg-blue-500 rounded-md shadow-sm hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500"
        >
          Save Changes
        </button>
      </div>
    </form>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
  function updateLeadDetails(data) {
    document.getElementById('templateId').value = data.id || '';
    document.getElementById('templateSubject').value = data.subject || '';
    document.getElementById('templateBody').value = data.body || '';
  }

  // Example: Add click listeners to your template rows
  document.querySelectorAll('.lead-card').forEach(card => {
    card.addEventListener('click', () => {
      const data = {
        id: card.dataset.id,
        subject: card.dataset.subject,
        body: card.dataset.body
      };
      updateLeadDetails(data);

      // Show detail panel if using 4thLink layout
      const dashboardSection = document.getElementById('dashboardSection');
      const detailSection = document.getElementById('detailSection');
      if (window.innerWidth >= 992) {
        detailSection.classList.add('show');
        dashboardSection.style.width = '50%';
      } else {
        dashboardSection.classList.add('hide-on-mobile');
        detailSection.classList.add('show-on-mobile');
      }
    });
  });

  // Close detail panel
  const closeBtn = document.getElementById('closeDetail');
  if (closeBtn) {
    closeBtn.addEventListener('click', () => {
      const dashboardSection = document.getElementById('dashboardSection');
      const detailSection = document.getElementById('detailSection');
      if (window.innerWidth >= 992) {
        detailSection.classList.remove('show');
        dashboardSection.style.width = '100%';
      } else {
        dashboardSection.classList.remove('hide-on-mobile');
        detailSection.classList.remove('show-on-mobile');
      }
    });
  }
</script>

</body>
</html>
