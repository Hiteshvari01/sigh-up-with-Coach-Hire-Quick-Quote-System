<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Login</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Bootstrap Icons CDN -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body class=" font-sans min-h-screen flex items-center justify-center">

  <div class=" rounded-lg p-8 w-full max-w-sm flex flex-col items-center shadow-lg">
    <img src="/assets/logo.png" alt="Logo" class="w-16 h-16 object-contain mb-6" />
    <h2 class="text-2xl font-bold mb-6 text-[#0d3b66]">Welcome back!</h2>

    <form method="POST" action="/login" id="loginForm" class="w-full" novalidate>

      <!-- Email -->
      <div class="mb-5">
        <label for="email" class="block mb-1 text-[#0d3b66] font-semibold">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          placeholder="Enter your email"
          required
          class="w-full rounded-md border border-gray-400 px-4 py-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-[#0066f5]"
          aria-describedby="emailError"
        />
        <p class="mt-1 text-red-600 text-sm hidden" id="emailError">Invalid email or password</p>
      </div>

      <!-- Password -->
      <div class="mb-5">
        <label for="password" class="block mb-1 text-[#0d3b66] font-semibold">Password</label>
        <div class="relative">
          <input
            type="password"
            name="password"
            id="password"
            placeholder="Enter your password"
            required
            minlength="6"
            class="w-full rounded-md border border-gray-400 px-4 py-2 pr-10 text-gray-700 focus:outline-none focus:ring-2 focus:ring-[#0066f5]"
            aria-describedby="passwordError"
          />
          <button
            type="button"
            id="togglePassword"
            class="absolute right-3 top-2.5 text-[#0066f5] hover:text-[#004bb5]"
            aria-label="Toggle password visibility"
          >
            <i class="bi bi-eye-slash"></i>
          </button>
        </div>
        <p class="mt-1 text-red-600 text-sm hidden" id="passwordError">
          Invalid email or password
        </p>
      </div>

      <!-- Remember me -->
      <div class="mb-6 flex items-center">
        <input
          type="checkbox"
          id="remember"
          class="h-4 w-4 text-[#0066f5] focus:ring-[#0066f5] border-gray-300 rounded"
          checked
        />
        <label for="remember" class="ml-2 block text-[#0d3b66] text-sm">
          Remember me for 2 weeks
        </label>
      </div>

      <!-- Submit -->
      <button
        type="submit"
        id="submitBtn"
        class="w-full bg-[#0066f5] hover:bg-[#0056d6] text-white py-3 rounded-full font-semibold transition disabled:opacity-50 disabled:cursor-not-allowed"
        disabled
      >
        Sign In
      </button>

      <!-- Forgot password -->
      <div class="mt-6 text-center">
        <a href="/reset"  class="text-[#004bb5] text-sm hover:underline">Forgot password?</a>
      </div>
    </form>
   
  </div>
</div>

  </div>

<script>
  
  const emailInput = document.getElementById("email");
  const passwordInput = document.getElementById("password");
  const submitBtn = document.getElementById("submitBtn");
  const emailError = document.getElementById("emailError");
  const passwordError = document.getElementById("passwordError");

  async function validateUser() {
    const email = emailInput.value;
    const password = passwordInput.value;

    if (!email || !password) {
      submitBtn.disabled = true;
      return;
    }

    try {
      const res = await fetch("/validate-login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ email, password }),
      });
      const data = await res.json();

      if (data.valid) {
        submitBtn.disabled = false;
        emailError.classList.add("hidden");
        passwordError.classList.add("hidden");
      } else {
        submitBtn.disabled = true;
        emailError.classList.remove("hidden");
        passwordError.classList.remove("hidden");
      }
    } catch (err) {
      console.error(err);
    }
  }

  emailInput.addEventListener("input", validateUser);
  passwordInput.addEventListener("input", validateUser);

  // On submit, redirect to 1stLink if valid
  document.getElementById("loginForm").addEventListener("submit", async (e) => {
    e.preventDefault();
    const res = await fetch("/login", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({
        email: emailInput.value,
        password: passwordInput.value,
      }),
    });
    const data = await res.json();
    if (data.success) {
      window.location.href = "/1stLink";
    } else {
      emailError.classList.remove("hidden");
      passwordError.classList.remove("hidden");
    }
  });



  
</script>

</body>
</html>
